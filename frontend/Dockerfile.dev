FROM node:18-alpine

# Set working directory
WORKDIR /app

# Add node_modules/.bin to PATH
ENV PATH /app/node_modules/.bin:$PATH

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production=false --silent

# Copy source code
COPY . ./

# Expose port
EXPOSE 3000

# Start development server with hot reload
CMD ["npm", "run", "dev"]